<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#f58142"
    android:stretchColumns="*"
    >
    <TableRow
        android:layout_width="0dp"
        android:background="@drawable/table_border"
        >
        <TextView
            android:text="Date"
            android:padding="5dp"
            android:layout_width="100dp"
            android:singleLine="false"
            android:id="@+id/summaryDate"
            android:layout_column="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            />
        <TextView
            android:text="Incident"
            android:id="@+id/summaryIncident"
            android:layout_gravity="center"
            android:layout_column="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:singleLine="false"
            />
        <TextView
            android:text="Address"
            android:padding="5dp"
            android:id="@+id/summaryAddress"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_width="100dp"
            android:singleLine="false"
            />
        <TextView
            android:text="Remarks"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_column="1"
            android:id="@+id/summaryContactPerson"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:singleLine="false"
            />
        <TextView
            android:text="Contact Number"
            android:id="@+id/summaryContactNumber"
            android:layout_gravity="center"
            android:layout_column="1"
            android:padding="5dp"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:singleLine="false"
                        />
        <TextView
            android:text="Status"
            android:id="@+id/summaryStatus"
            android:layout_gravity="center"
            android:layout_column="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:singleLine="false"
            />
        <TextView
            android:text="Responded By"
            android:id="@+id/respondedBy"
            android:layout_gravity="center"
            android:layout_column="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:singleLine="false"
            />
    </TableRow>
</TableLayout>
