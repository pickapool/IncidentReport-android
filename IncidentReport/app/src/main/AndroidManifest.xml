<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.incidentreport">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/mdrrmc_logo"
        android:label="MDRRMC"
        android:supportsRtl="true"
        android:theme="@style/Theme.IncidentReport">
        <activity
            android:name=".UserActivities.UserPanel_NewsActivity"
            android:exported="true" />
        <activity
            android:name=".AdminActivities.Admin"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity
            android:name=".UserActivities.UserPanel_Profile"
            android:exported="true"
            android:label="Edit profile" />
        <activity
            android:name=".UserActivities.UserPanel_File"
            android:exported="true"
            android:label="File" />
        <activity
            android:name=".UserActivities.UserPanel_Report"
            android:exported="true"
            android:label="Report" />
        <activity
            android:name=".UserActivities.UserPanel_Home"
            android:exported="true"
            android:label="Home" />
        <activity
            android:name=".Activities.SignUp"
            android:exported="true"
            android:label="Create Account" />
        <activity
            android:name=".Activities.Login"
            android:exported="true"
            android:label="LAUA-AN INCIDENT REPORT">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>